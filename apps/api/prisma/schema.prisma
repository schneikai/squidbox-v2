generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  oauthTokens  OAuthToken[]
  posts        Post[]
}

model OAuthToken {
  id           String   @id @default(cuid())
  userId       String
  platform     String   // "twitter", "bluesky", "onlyfans", "jff"
  accessToken  String
  refreshToken String?
  expiresIn    Int
  expiresAt    DateTime?
  username     String
  platformUserId String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, platform])
}

model Post {
  id               String   @id @default(cuid())
  userId           String
  platform         String   // "twitter", "bluesky", "onlyfans", "jff"
  text             String
  status           String   // "pending", "success", "partial", "failed"
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  postingResults   PostingResult[]
  postMedia        PostMedia[]
}

model Media {
  id               String   @id @default(cuid())
  type             String   // "image", "video"
  url              String   @unique
  alt              String?
  localPath        String?  // Path to downloaded file
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  postMedia        PostMedia[]
  downloadResult   MediaDownloadResult?
}

model PostMedia {
  id               String   @id @default(cuid())
  postId           String
  mediaId          String
  order            Int      // Order of media in the post
  createdAt        DateTime @default(now())
  
  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  media Media @relation(fields: [mediaId], references: [id], onDelete: Cascade)
  
  @@unique([postId, mediaId])
  @@unique([postId, order])
}

model MediaDownloadResult {
  id               String   @id @default(cuid())
  mediaId          String   @unique
  status           String   // "pending", "downloading", "success", "failed"
  localPath        String?  // Path to downloaded file
  error            String?  // Error message if download failed
  downloadedAt     DateTime?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  media Media @relation(fields: [mediaId], references: [id], onDelete: Cascade)
}

model PostingResult {
  id               String   @id @default(cuid())
  postId           String
  platform         String   // "twitter", "bluesky", "onlyfans", "jff"
  success          Boolean
  platformPostId   String?  // ID returned by the platform
  error            String?  // Error message if failed
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  @@unique([postId, platform])
}