{
  "name": "squidboxservice",
  "version": "1.0.0",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "pnpm dev:up && tsx watch src/index.ts",
    "dev:setup": "pnpm dev:up && pnpm dev:db:migrate && pnpm dev:seed",
    "dev:up": "docker compose up -d db redis",
    "dev:down": "docker compose down -v --remove-orphans",
    "dev:db:migrate": "prisma migrate dev",
    "dev:db:reset": "prisma migrate reset",
    "dev:seed": "tsx prisma/seed.ts",
    "deploy": "bash scripts/deploy-fly.sh",
    "build": "tsc -p tsconfig.json",
    "start": "node --enable-source-maps dist/index.js",
    "types": "tsc --noEmit -p tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "husky",
    "postinstall": "prisma generate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@bull-board/api": "^6.13.0",
    "@bull-board/express": "^6.13.0",
    "@prisma/client": "^6.15.0",
    "@squidbox/contracts": "workspace:*",
    "@squidbox/twitter-api": "workspace:*",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.24.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.4.2",
    "jsonwebtoken": "^9.0.2",
    "oauth-1.0a": "^2.2.6",
    "pino": "^9.9.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.0",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "nock": "^14.0.10",
    "pino-pretty": "^11.2.2",
    "prettier": "^3.3.3",
    "prisma": "^6.15.0",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^2.0.5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "*.{ts,tsx,js,jsx,json,md,css,scss}": [
      "prettier --write"
    ]
  }
}
